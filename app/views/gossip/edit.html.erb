<div class="card text-center">
    <%= form_for @gossip do |f| %>
      
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="card-header">
      Modifie ton potin ici
     </div>
     <div class="card-body">

      <%= label_tag 'Title' %> <br />
      <%= f.text_field :title %>
      <br /> <br />

      <%= label_tag 'Content' %> <br />
      <%= f.text_area :content %>
      <br /> <br />

      <%= submit_tag "Update Gossip"%><br /> <br />
    </div>
      <% if flash[:alert] %>
      <div class="alert alert-danger">
      <strong>Attention !</strong> Ton gossip n'a pas été modifié.
      </div>
      <% end %>


    <% end %>

    <div class="card-footer text-muted">