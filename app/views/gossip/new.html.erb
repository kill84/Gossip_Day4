<html>
    <head>
      <title>The Gossip Project</title>
    </head>
  <body>
    <!-- ... -->
    <div class="card text-center">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="card-header">
      Balance quelque chose de croustillant
     </div>
     <div class="card-body">

      <%= label_tag 'Title' %> <br />
      <%= text_field_tag 'title', @gossip.title %>
      <br /> <br />

      <%= label_tag 'Content' %> <br />
      <%= text_area_tag 'content', @gossip.content %>
      <br /> <br />

      <%= label_tag 'User' %> <br />
      <%= text_field_tag 'user_id', @gossip.user_id %>
      <br /> <br />

      <%= submit_tag "Create Gossip"%><br /> <br />
    </div>
      <% if flash[:alert] %>
      <div class="alert alert-danger">
      <strong>Attention !</strong> Ton gossip n'a pas été posté.
      </div>
      <% end %>


    <% end %>

    <div class="card-footer text-muted">
    </div>
    </div>
    <!-- ... -->
  </body>
</html>

