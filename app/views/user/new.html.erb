<html>
  <body>
    <!-- ... -->
    <div class="card text-center">
    <%= form_tag url_for(action: 'create'), method: "post" do %>

      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="card-header">
      Inscris-toi ici mon gâté
     </div>
     <div class="card-body">

      <%= label_tag 'Prénom' %> <br />
      <%= text_field_tag 'first_name', @user.first_name %>
      <br /> <br />

      <%= label_tag 'Nom' %> <br />
      <%= text_field_tag 'last_name', @user.last_name %>
      <br /> <br />

      <%= label_tag 'Âge' %> <br />
      <%= text_field_tag 'age', @user.age %>
      <br /> <br />

      <%= label_tag 'Décris-toi en quelques mots' %> <br />
      <%= text_area_tag 'description', @user.description %>
      <br /> <br />

      <%= label_tag 'Addresse email' %> <br />
      <%= text_field_tag 'email', @user.email %>
      <br /> <br />

      <%= label_tag 'Mot de passe' %> <br />
      <%= text_field_tag 'password', @user.password %>
      <br /> <br />

      <%= label_tag 'Ville' %> <br />
      <%= text_field_tag 'city_id', @user.city_id %>
      <br /> <br />

      <%= submit_tag "Create User"%><br /> <br />
    </div>
      <% if flash[:alert] %>
      <div class="alert alert-danger">
      <strong>Attention !</strong> Ton utilisateur n'a pas été posté.
      </div>
      <% end %>


    <% end %>

    <div class="card-footer text-muted">
    </div>
    </div>
    <!-- ... -->
  </body>
</html>
